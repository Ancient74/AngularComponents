{
    "name": "angularcomponents",
    "displayName": "AngularComponents",
    "description": "Fast components creating for Angular",
    "version": "1.0.0",
    "publisher": "YuraRuban",
    "engines": {
        "vscode": "^1.27.2"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
		"onCommand:angularComponent.createComponent"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
			{
				"command": "angularComponent.createComponent",
				"title": "New Angular Component",
				"category": "angularComponent"
			}
		],
		"configuration":[
			{
				"title": "Angular Component",
				"properties": {
					"angularComponent.allowDir":{
						"type":"boolean",
						"default":true,
						"description": "Create dir when creating component"
					}
				}
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "angularComponent.createComponent",
					"group": "navigation"
				}
			]
		}
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
	}
}
